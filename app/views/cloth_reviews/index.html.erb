<p id="notice"><%= notice %></p>

<h1>Cloth Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cloth</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cloth_reviews.each do |cloth_review| %>
      <tr>
        <td><%= cloth_review.user_id %></td>
        <td><%= cloth_review.cloth_id %></td>
        <td><%= cloth_review.review %></td>
        <td><%= link_to 'Show', cloth_review %></td>
        <td><%= link_to 'Edit', edit_cloth_review_path(cloth_review) %></td>
        <td><%= link_to 'Destroy', cloth_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cloth Review', new_cloth_review_path %>
